<!DOCTYPE html>
<html lang="en">

<%- include('partials/_head',{title:'New URL - TinyApp Example'}) %>

  <body>
    <%- include('partials/_header') %>

      <main style="margin: 1em;">
        <h3>Create TinyURL</h3>
        <% if (locals.errorMessage) { %>
          <div class="alert alert-danger" role="alert">
            <%= errorMessage %>
          </div>
          <% } %>
            <form class="form-inline" action="/urls" method="POST">
              <div class="form-group mb-2">
                <label for="longURL">Enter a URL:</label>
                <input class="form-control" type="text" name="longURL" placeholder="http://"
                  style="width: 300px; margin: 1em" />
                <button type="submit" class="btn btn-primary"><i class="fas fa-check-square"></i> Submit</button>
              </div>
            </form>
      </main>
      <%- include('partials/_bootstrap_js') %>
  </body>

</html>