<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head',{title:'Login - Tiny App'}) %>

  <body>
    <%- include('partials/_header') %>


      <main style="margin: 1em;">
        <div class="container col-4 bg-light">
          <h3>Login</h3>

          <form action="/login" , method="POST">
            <div class="form-group">
              <% if ( locals.errorMessage ) { %>
                <div class="alert alert-danger" role="alert">
                  <%= errorMessage %>
                </div>
                <% } %>
                  <label for="email-id">Email address</label>
                  <input type="email" name=email class="form-control" id="email-id" placeholder="Your email">
            </div>
            <div class="form-group">
              <label for="password-id">Password</label>
              <input type="password" name=password class="form-control" id="password-id" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>

      </main>


      <%- include('partials/_bootstrap_js') %>

  </body>

</html>