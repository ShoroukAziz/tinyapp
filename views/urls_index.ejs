<!DOCTYPE html>
<html lang="en">


<%- include('partials/_head',{title:'TinyApp'}) %>

  <body>

    <%- include ('partials/_header') %>

      <main style="margin: 1em;">
        <h3>My URLs</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Short URL ID</th>
              <th scope="col">Long URL</th>
              <th scope="col">Short URL</th>
              <th scope="col">Created Date</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for (let id in urls) { %>
              <tr>
                <td>
                  <%= id %>
                </td>
                <td>
                  <a href="<%= urls[id].longURL %>" target="_blank">
                    <%= urls[id].longURL %>
                  </a>
                </td>
                <td>
                  <a href="/u/<%= id %>" target="_blank">
                    <%= id %>
                  </a>
                </td>
                <td>
                  <%= urls[id].createdDate %>
                </td>
                <td>
                  <form method="get" action="/urls/<%= id %>">
                    <button type="submit" class="btn btn-outline-primary">Edit</button>
                  </form>
                </td>
                <td>
                  <form method="POST" action="/urls/<%= id %>/delete">
                    <button class="btn btn-outline-danger" type="submit">Delete</button>
                  </form>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </main>
      <%- include('partials/_bootstrap_js') %>

  </body>

</html>